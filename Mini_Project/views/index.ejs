<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800" type="text" name="title" placeholder="Title goes here">
                <textarea class="block px-5 py-2 w-full rounded-md outline-none mt-2 resize-none bg-zinc-800" name="details" placeholder="Write your task here"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files && files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter" name="title"><%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>" name="details">Read More</a>
                        <a class ="text-zinc-600" href ="/edit/<%= val %>">edit</a>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
